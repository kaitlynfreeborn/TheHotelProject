<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>KL Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="align-items:center;">
        <div class="container" >
            <div class="navbar-header" align="center">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" align="center">
                    <li> @Html.ActionLink("Rooms", "Index", "Rooms", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li> @Html.ActionLink("About us", "About", "HOme", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li> @Html.ActionLink("Log in", "Login", "Customer", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li> @Html.ActionLink("Reservations", "Index", "Reservations", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        </div>)
    </div>
    <div class="container body-content">
       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>